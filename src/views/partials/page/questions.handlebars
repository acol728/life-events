<div class="small-10 columns">
	<div id="main_section" class="card" style="height: 70vh; margin-bottom: 2vh; margin-top: 2vh; position: relative">
		<div class="row" style="height: 11vh;">
			{{#each (getPages)}}
			<div id="title-{{id}}" class="small-12 columns" style="text-align: center; border-bottom: 3px solid #eeeeee; {{#unless show}}display: none;{{/unless}}">
				<h3 style="line-height: 6rem; font-size: 2rem; color: #16b161; font-weight: 500"> {{title}}</h3>
			</div>
			{{/each}}
		</div>
		<div class="row" style="height: 51vh; ">
			<div id="page" class="small-8 columns" style=" background-color: #ffffff; height: 90%; position: relative ">
				{{#each (getPages)}}
				<div id="{{id}}" style="{{#unless show}}display: none;{{/unless}} position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); ">
					{{#if subtitle}}
					<p style="text-align: center; font-size: 2rem; line-height: 2.5rem ">
						{{subtitle}}
					</p>
					{{/if}}{{#if subtitle2}}
					<p style="text-align: center; font-size: 2rem; line-height: 2.5rem; color:#16b161; ">
						{{subtitle2}}
					</p>
					{{/if}} {{#each questions}} {{#compare type "===" "text"}}
					<div class="md-text-field with-floating-label">
						<input type="{{type}}" id="{{id}}" style="font-size: 1.5rem; height: 3rem; width: 24vw;" placeholder="{{placeholder}}"></input>
					</div>
					{{/compare}} {{#compare type "===" "select-dropdown"}}
					<div class="uitk-select md-text-field with-floating-label" style="margin-top: 4rem; width: 24vw">
						<input id="{{id}}" type="text" class="select-input" readonly="true" placeholder="{{placeholder}}" required>
						<span class="select-arrow"></span>
						<ul class="select-dropdown">
							{{#each values}}
							<li id="{{id}}">{{text}}</li>
							{{/each}}
						</ul>
						<label>{{label}}</label>
					</div>
					{{/compare}}{{#compare type "===" "radio"}}
					<div id="{{id}}" class="md-multi-ctrl-field " style="{{#unless show}}display: none;{{/unless}}">
						{{#each values}}
						<input id="{{id}}" name="{{../id}}" type="{{../type}}">
						<label for="{{id}}">{{text}}</label>
						{{/each}}
					</div>
					{{/compare}} {{/each}}
				</div>
				{{/each }}
			</div>
			<div id="info" class="small-4 columns" style="background-color: #ffffff; text-align: center; height: 90%;">
				<div class="" style="background-color: #fff; border-left: 3px solid #eeeeee; margin: 2vh; padding: 2vh; height: 100%;">
					<ul class="keyval-chart key-columns-5 val-columns-7" id="info-table">
						<li class="chart-head">
							<span class="key">Selection</span>
							<span class="val">Value</span>
						</li>
					</ul>
				</div>
			</div>
		</div>
