<div id='data' class="small-12 columns card" style="background: #e1f1f5; height: 24vh; margin-bottom: 2vh;">
	<div class='row' style="text-align: center; color: white;">
		{{#each (getHeroes)}}
		<div class="small-4 columns">
			<div id="{{id}}" style="background-color: #29488E; height: 20vh; ">
				<h4 style="color: white; padding-top: 10px;">{{title}}</h4>
				<h1 style="font-size: 3rem; padding-top: 40px; color: white;">{{defaultValue}}</h1>
			</div>
		</div>
		{{/each}}
	</div>
</div>
</div>
